<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tarbikum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:id="@+id/btn_camera"
            android:clickable="true"

            android:background="@drawable/button_shape_black"
            android:layout_width="180dp"
            android:layout_height="35dp"

            >
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:text="GUNAKAN KAMERA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/btn_gelllary"
            android:clickable="true"
            android:onClick="mulat_button_click"
            android:background="@drawable/button_shape_white"
            android:layout_width="180dp"
            android:layout_height="35dp"

            >
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:text="PILIH DARI GALERI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                />
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>