<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/pilish_fram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        />


       <android.support.v7.widget.RecyclerView
           android:id="@+id/recycular_frams"
           android:layout_centerInParent="true"
           android:layout_width="match_parent"
           android:layout_height="200dp">

       </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
           android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


               <!-- android:id="@+id/button_manager"-->
            <RelativeLayout
                android:id="@+id/button_manager"
                android:background="@drawable/button_shape_black"
                android:layout_width="150dp"
                android:layout_height="30dp"

                >
                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    android:text="MANAGER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_participant"
                android:background="@drawable/button_shape_white"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:text="PARTICIPANT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>